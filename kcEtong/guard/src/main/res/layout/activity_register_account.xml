<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/iv_register_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_selector"
            android:paddingLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tViewAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="手机号码: "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/eTextAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tViewAccount"
                android:layout_toRightOf="@+id/tViewAccount"
                android:hint="手机号码"
                android:maxLength="20"
                android:textColorHint="@color/grey_dark" />

            <Button
                android:id="@+id/buttonAccountClear"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/img_edittext_delete"
                android:visibility="visible"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tips_paw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="密码: "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/eTextPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tips_paw"
                android:layout_toRightOf="@+id/tips_paw"
                android:hint="请输入正确的密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColorHint="@color/grey_dark" />

            <Button
                android:id="@+id/buttonPasswordEye"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/img_login_checkbox" />

            <Button
                android:id="@+id/buttonPasswordClear"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_toLeftOf="@+id/buttonPasswordEye"
                android:layout_toStartOf="@+id/buttonPasswordEye"
                android:background="@drawable/img_edittext_delete"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tips_again_paw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="确认密码: "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/eTextAgainPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tips_again_paw"
                android:layout_toRightOf="@+id/tips_again_paw"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColorHint="@color/grey_dark" />

            <Button
                android:id="@+id/buttonAgainPasswordEye"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/img_login_checkbox" />

            <Button
                android:id="@+id/buttonAgainPasswordClear"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_toLeftOf="@+id/buttonAgainPasswordEye"
                android:layout_toStartOf="@+id/buttonAgainPasswordEye"
                android:background="@drawable/img_edittext_delete"
                android:visibility="invisible" />
        </RelativeLayout>

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="注册"
            android:textColor="@color/white"
            android:background="@drawable/search_green_selector"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
