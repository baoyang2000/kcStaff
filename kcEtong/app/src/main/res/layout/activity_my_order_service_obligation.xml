<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical"
              tools:context="com.ctrl.android.kcetong.ui.activity.MyOrderServicePretreatmentActivity">


    <include layout="@layout/include_toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_my_repairs_pretreament_progress"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/LargeTextSize"/>


                    <TextView
                        android:id="@+id/tv_cancel"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_shap"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_my_repairs_pretreament_type"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>




                <TextView
                    android:id="@+id/tv_my_repairs_pretreament_price"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>

                <TextView
                    android:id="@+id/tv_my_repairs_pretreament_room"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>

                <TextView
                    android:id="@+id/tv_my_repairs_pretreament_time"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="备注："
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baoxiuline3x"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/tv_my_repairs_pretreament_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:inputType="textMultiLine"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_baoxiu_image"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="实景照片"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_gray"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv01_my_repairs_pretreament"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv02_my_repairs_pretreament"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv03_my_repairs_pretreament"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_my_repairs_wuye"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_repairs_pretreament_wuye"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/LargeTextSize"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="服务反馈："
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baoxiuline3x"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/tv_my_repairs_pretreament_result"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:inputType="textMultiLine"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_wuye_image"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反馈照片"
                    android:visibility="gone"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_gray"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv04_my_repairs_pretreament"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv05_my_repairs_pretreament"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv06_my_repairs_pretreament"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_repairs_pingjia"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/LargeTextSize"/>

                <RadioGroup
                    android:id="@+id/rg_repairs"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_repairs_01"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="非常满意"
                        android:checked="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/BasicTextSize"
                        android:background="@drawable/radiobutton_green_selector"
                        />
                    <RadioButton
                        android:id="@+id/rb_repairs_02"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="基本满意"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/BasicTextSize"
                        android:background="@drawable/radiobutton_green_selector"
                        />
                    <RadioButton
                        android:id="@+id/rb_repairs_03"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:text="不满意"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/text_gray"
                        android:button="@null"
                        android:textSize="@dimen/BasicTextSize"
                        android:background="@drawable/radiobutton_green_selector"
                        />
                </RadioGroup>

                <TextView
                  android:layout_marginLeft="20dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/text_gray"
                  android:text="评价内容："
                  android:layout_marginTop="5dp"
                  android:textSize="@dimen/BasicTextSize"/>

                <EditText
                  android:id="@+id/et_my_repairs_pretreament_pingjia"
                  android:gravity="top"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:lines="6"
                  android:textSize="@dimen/BasicTextSize"
                  android:paddingLeft="5dp"
                  android:inputType="textMultiLine"
                  android:layout_marginBottom="10dp"
                  android:background="@drawable/edit_shap_gray"/>

              </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_go_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_go_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="去付款"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/green_bg_shap"/>

    </RelativeLayout>

</LinearLayout>
