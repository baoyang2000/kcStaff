<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_bg">
    <include layout="@layout/include_toolbar"
             android:id="@+id/tool_bar"/>
    <LinearLayout
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_delivery_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_order_location"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fai"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_location"
                android:layout_toLeftOf="@+id/iv_right"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_sh"
                        style="@style/myPersonalTextViewStyle"
                        android:text="收货人:"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/tv_buyer_name"
                        style="@style/myPersonalTextViewStyle"
                        android:text="贾晓铎"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/tv_sh"/>
                    <TextView
                        android:id="@+id/tv_buyer_mobile"
                        style="@style/myPersonalTextViewStyle"
                        android:text="13589012563"
                        android:textSize="16sp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        style="@style/myPersonalTextViewStyle"
                        android:text="收货地址:"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_buyer_address"
                        style="@style/myPersonalTextViewStyle"
                        android:text="山东省济南市历下区经十路137777号中润世纪广场"
                        android:textSize="15sp"
                        android:lines="2"
                        android:ellipsize="end"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_product_name"
                    style="@style/myPersonalTextViewStyle"
                    android:text="苹果"
                     />
                <TextView
                    android:id="@+id/tv_product_price"
                    style="@style/myPersonalTextViewStyle"
                    android:text="9.9元"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ccc"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    style="@style/myPersonalTextViewStyle"
                    android:text="数量"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_order_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_order_add"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_product_number"
                    style="@style/myPersonalTextViewStyle"
                    android:layout_width="60dp"
                    android:padding="5dp"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="@drawable/one_shape"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv_order_add"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_order_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_order_minus"
                    android:layout_toLeftOf="@+id/tv_product_number"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ccc"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <EditText
                android:visibility="gone"
                android:id="@+id/et_order_ask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:lines="4"
                android:padding="10dp"
                android:textSize="16sp"
                android:hint="选填,可填写一些您的要求"
                android:gravity="top|left"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ccc"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_order_number"
                    style="@style/myPersonalTextViewStyle"
                    android:text="共计1件商品"
                    />
                <TextView
                    style="@style/myPersonalTextViewStyle"
                    android:text="合计:"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/tv_order_total"
                    style="@style/myPersonalTextViewStyle"
                    android:text="￥4.2"
                    android:textColor="#da3b36"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_order_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shap_blue"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
