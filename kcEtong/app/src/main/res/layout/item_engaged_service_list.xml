<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
                android:background="@color/white"
    android:padding="@dimen/activity_padding_small"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_engaged_service_list"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_image"
        android:textColor="@color/text_black"
        />

    <!--选择按钮-->
    <TextView
        android:id="@+id/tv_engaged_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text=""
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_engaged_service_list"
        />
    <TextView
        android:id="@+id/tv_engaged_service_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_engaged_service_name"
        android:layout_toRightOf="@+id/iv_engaged_service_list"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:text=""
        />
    <TextView
        android:id="@+id/tv_engaged_service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:text="$300"
        android:textColor="#ed5a09"
        android:padding="5dp"
        />

</RelativeLayout>





