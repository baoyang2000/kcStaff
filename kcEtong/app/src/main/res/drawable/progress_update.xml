<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="5dip" />
			<gradient android:startColor="#cccccc"
				android:centerColor="#cccccc" android:centerY="0.75"
				android:endColor="#cccccc" android:angle="270" />
		</shape>
	</item>

	<item android:id="@android:id/secondaryProgress">
		<clip>
			<shape>
				<corners android:radius="5dip" />
				<gradient android:startColor="#80C07AB8"
					android:centerColor="@color/tab_bar_select" android:centerY="0.75"
					android:endColor="@color/tab_bar_select" android:angle="270" />
			</shape>
		</clip>
	</item>

	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="5dip" />
				<gradient android:startColor="@color/tab_bar_select"
					android:centerColor="@color/tab_bar_select" android:centerY="0.75"
					android:endColor="@color/tab_bar_select" android:angle="270" />
			</shape>
		</clip>
	</item>

</layer-list>