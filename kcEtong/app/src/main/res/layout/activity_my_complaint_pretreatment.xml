<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical"
              tools:context="com.ctrl.android.kcetong.ui.activity.MyComplaintPretreatmentActivity">


    <include android:id="@+id/header"
             layout="@layout/include_toolbar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_my_complaint_pretreament_progress"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/LargeTextSize"/>

                <TextView
                    android:id="@+id/tv_my_complaint_pretreament_room"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>
                <TextView
                    android:id="@+id/tv_my_complaint_pretreament_time"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>
                <TextView
                    android:id="@+id/tv_my_complaint_pretreament_type"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>
                <LinearLayout
                    android:id="@+id/layout_voice"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/BasicTextSize"
                        android:textColor="@color/text_gray"
                        android:text="报修语音："/>
                    <RelativeLayout
                        android:id="@+id/voice_group_top"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerInParent="true"
                        android:minHeight="30dp"
                        android:background="@drawable/button_recordnormal"
                        android:visibility="visible">

                        <View
                            android:id="@+id/id_anim"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/play_3" />

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/BasicTextSize"
                        android:textColor="@color/text_gray"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="投诉内容："
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>

                <TextView
                    android:id="@+id/tv_my_complaint_pretreament_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:inputType="textMultiLine"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_tousu_image"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实景照片"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_gray"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv01_my_complaint_pretreament"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/img_gray"
                        />
                    <ImageView
                        android:id="@+id/iv02_my_complaint_pretreament"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/img_gray"
                        />
                    <ImageView
                        android:id="@+id/iv03_my_complaint_pretreament"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@color/img_gray"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_my_complaint_wuye"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_complaint_pretreament_progress_wuye"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/LargeTextSize"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="处理结果："
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>

                <TextView
                    android:id="@+id/tv_my_complaint_pretreament_progress_result"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:inputType="textMultiLine"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_wuye_image"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反馈照片"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_gray"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv04_my_complaint_pretreament"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/img_gray"
                        />
                    <ImageView
                        android:id="@+id/iv05_my_complaint_pretreament"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/img_gray"
                        />
                    <ImageView
                        android:id="@+id/iv06_my_complaint_pretreament"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@color/img_gray"
                        android:layout_weight="1"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_complaint_pinjia"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:background="#ffffff">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/LargeTextSize"/>

                <RadioGroup
                    android:id="@+id/rg_complaint"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_complaint_01"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="非常满意"
                        android:textColor="@color/white"
                        android:checked="true"
                        android:textSize="@dimen/BasicTextSize"
                        android:background="@drawable/radiobutton_green_selector"
                        />
                    <RadioButton
                        android:id="@+id/rb_complaint_02"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="基本满意"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/BasicTextSize"
                        android:background="@drawable/radiobutton_green_selector"
                        />
                    <RadioButton
                        android:id="@+id/rb_complaint_03"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="不满意"
                        android:textColor="@color/text_gray"
                        android:button="@null"
                        android:textSize="@dimen/BasicTextSize"
                        android:background="@drawable/radiobutton_green_selector"
                        />
                </RadioGroup>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="评价内容："
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>

                <EditText
                    android:id="@+id/et_my_complaint_pretreament_content"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:lines="6"
                    android:textSize="@dimen/BasicTextSize"
                    android:paddingLeft="5dp"
                    android:inputType="textMultiLine"
                    android:background="@drawable/edit_shap_gray"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="visible"
                    >
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:text="评价语音："
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/BasicTextSize"/>

                    <com.ctrl.android.kcetong.ui.widget.AudioRecordButton
                        android:id="@+id/voice_btn"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_recordnormal"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:minHeight="30dp"
                        android:text="@string/normal"
                        android:textColor="#727272"
                        android:visibility="visible"/>

                    <RelativeLayout
                        android:id="@+id/voice_group"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_centerInParent="true"
                        android:minHeight="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_recordnormal"
                        android:visibility="gone">

                        <View
                            android:id="@+id/id_receiver_recorder_anim"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/play_3" />

                        <TextView
                            android:id="@+id/voice_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=""
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/id_receiver_recorder_anim"
                            android:layout_marginLeft="20dp"
                            />

                        <ImageView
                            android:id="@+id/del_voice"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/comment_pic_default"
                            android:scaleType="fitCenter"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
