<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_toolbar" />
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="48dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radio_delivery"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/top_category_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:textColor="@drawable/tab_text_color_selector"
            android:singleLine="true"
            android:textSize="15sp">
        </RadioButton>
        <View
            style="@style/vLineStyle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <RadioButton
            android:id="@+id/radio_receipt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/top_category_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="@drawable/tab_text_color_selector"
            android:singleLine="true"
            android:textSize="15sp">
        </RadioButton>
        <View
            style="@style/vLineStyle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <RadioButton
            android:id="@+id/radio_evaluate"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/top_category_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:singleLine="true"
            android:textColor="@drawable/tab_text_color_selector"
            android:textSize="15sp">
        </RadioButton>
        <View
            style="@style/vLineStyle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <RadioButton
            android:id="@+id/radio_finish"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/top_category_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="@drawable/tab_text_color_selector"
            android:singleLine="true"
            android:textSize="15sp">
        </RadioButton>
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:flipInterval="400"
        android:persistentDrawingCache="animation" />
</LinearLayout>