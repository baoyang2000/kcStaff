<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/main_bg"
                android:layout_height="match_parent"
    >
    <include
        android:id="@+id/header"
        layout="@layout/include_toolbar"
       />

    <ScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_above="@+id/rl_bottom"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.stx.xhb.xbanner.XBanner
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/banner_1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/default_image"
                    app:pointsVisibility="false"
                    app:AutoPlayTime="3000"
                    />

                <TextView
                    android:id="@+id/tv_pager_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="6/5"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="鲁能领袖成的飞水电费的舒服舒服水电费"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2012---f-fdf"
                    android:textColor="@color/text_gray"
                    android:layout_below="@+id/tv_title"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="售价"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/text_gray"
                    ></View>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="户型"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/text_gray"
                    ></View>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="面积"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="300万"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/text_yellow"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/text_gray"
                    ></View>
                <TextView
                    android:id="@+id/tv_room"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2室一厅一卫"
                    android:gravity="center"
                    android:textColor="@color/text_yellow"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/text_gray"
                    ></View>
                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="150m"
                    android:gravity="center"
                    android:textColor="@color/text_yellow"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单价："
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_gray"/>
                    <TextView
                        android:id="@+id/tv_single_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="155415"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朝向："
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_gray"/>
                    <TextView
                        android:id="@+id/tv_chaoxiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="南北"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="楼层："
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_gray"/>
                    <TextView
                        android:id="@+id/tv_floor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高层"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="位置："
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_gray"/>
                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二环南路"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="5px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@color/text_yellow"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:text="房源描述"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型："
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_gray"/>
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="155415"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="装修："
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_gray"/>
                    <TextView
                        android:id="@+id/tv_zhuangxiu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产权："
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_gray"/>
                    <TextView
                        android:id="@+id/tv_chanqiu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房龄："
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_gray"/>
                    <TextView
                        android:id="@+id/tv_house_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:textColor="@color/text_black"
                android:background="@color/white"
                android:textSize="14sp"
                />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:background="@color/text_green"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:text="刘学兵"/>
        <TextView
            android:id="@+id/tv_contact_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:text="154884848454"/>

        <ImageView
            android:id="@+id/iv_contact_tel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/tel_gray"/>
    </RelativeLayout>
</RelativeLayout>