<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg">
    <include layout="@layout/include_toolbar" />
    <ScrollView
        android:id="@+id/sv_bus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" >
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/viewGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewpager"
                    android:layout_marginTop="-25px"
                    android:gravity="right"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_choice_price"
                    style="@style/myPersonalTextViewStyle"
                    android:text="￥"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#cc0200"/>
                <TextView
                    android:id="@+id/iv_choice_buy"
                    style="@style/myPersonalTextViewStyle"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="立即抢购"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_shap"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_sysj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconfont_time"
                    android:text=" 剩余时间:"
                    />

                <TextView
                    android:id="@+id/tv_tg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/tv_sysj"
                    android:layout_toRightOf="@+id/tv_sysj"
                    android:text="2天6小时"/>
                <TextView
                    android:id="@+id/tv_tg_sell_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_choice"
                    style="@style/myPersonalTextViewStyle"
                    android:text="商家信息"
                    android:textColor="#666666"/>
                <TextView
                    android:id="@+id/tv_choice_address"
                    style="@style/myPersonalTextViewStyle"
                    android:text="济南市"
                    android:textSize="16sp"
                    android:textColor="#cdcdcd"
                    android:layout_below="@+id/tv_choice"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/iv_choice_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_bus_phone"
                    android:padding="15dp"
                    android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="75dp"
                    android:background="#cdcdcd"
                    android:layout_toLeftOf="@+id/iv_choice_phone"/>
            </RelativeLayout>
            <WebView
                android:id="@+id/wb_choice_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

            </WebView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>