<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ctrl.android.kcetong.ui.view.RoundImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_photo_buy"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/touxiang2x"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_photo_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_second_hand_item_name"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/BasicTextSize"/>
        <TextView
            android:id="@+id/tv_second_hand_item_time"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/SmallerTextSize"
            android:textColor="@color/text_gray"
            />
        <TextView
            android:id="@+id/tv_second_hand_item_location"
            android:layout_toRightOf="@id/iv_photo_buy"
            android:layout_below="@id/tv_second_hand_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/SmallerTextSize"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_gray"/>

        <TextView
            android:id="@+id/tv_second_hand_item_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/tv_second_hand_item_location"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/LargeTextSize"/>

        <TextView
            android:id="@+id/tv_second_hand_item_price"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_second_hand_item_location"
            android:text=""
            android:textColor="@color/text_green"
            android:textSize="@dimen/BasicTextSize"
            />
        <TextView
            android:layout_below="@id/tv_second_hand_item_price"
            android:layout_width="match_parent"
            android:layout_height="15dp" />

    </RelativeLayout>
</LinearLayout>